generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // "USER" or "ADMIN"
  
  // Profile fields
  phone         String?
  address       String?
  city          String?
  country       String?
  
  // Relations
  bookings      Booking[]
  blogPosts     BlogPost[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model BlogPost {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  excerpt       String?
  content       String   @db.Text
  featuredImage String?
  category      String   @default("travel")
  tags          String[]
  published     Boolean  @default(false)
  authorId      String
  author        User     @relation(fields: [authorId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Booking {
  id          String   @id @default(cuid())
  pickup      String
  dropoff     String
  date        String
  time        String
  passengers  Int
  tripType    String
  returnDate  String?
  returnTime  String?
  status      String   @default("pending") // pending, confirmed, completed, cancelled
  
  // Guest details (snapshot)
  customerName String?
  customerEmail String?
  customerPhone String?

  // Relation to User (optional, for registered users)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SEOSettings {
  id          String   @id @default(cuid())
  pagePath    String   @unique
  title       String
  description String
  keywords    String[]
  ogImage     String?
  updatedAt   DateTime @updatedAt
}

model SmtpSettings {
  id        String   @id @default(cuid())
  host      String
  port      Int
  user      String
  password  String
  fromEmail String
  secure    Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model Page {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  description String?
  keywords    String[]
  ogImage     String?
  published   Boolean  @default(false)
  template    String   @default("default") // default, blog, landing, etc.
  sections    PageSection[]
  seoSettings SEOSettings?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PageSection {
  id        String   @id @default(cuid())
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  name      String
  content   String   @db.Text
  order     Int      @default(0)
  type      String   @default("text") // text, image, gallery, form, etc.
  settings  Json?    // JSON for section-specific settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
